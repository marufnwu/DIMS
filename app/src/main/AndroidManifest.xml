<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sequentia.dimsePotli" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dims_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dims_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DIMSWithActionBar" >

        <activity android:name="com.sequentia.dimsePotli.WebActivity"
            android:theme="@style/Theme.DIMS"
            android:label="Web"
            />
        <activity
            android:name="com.sequentia.dimsePotli.SplashScreen"
            android:theme="@style/Theme.DIMS" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sequentia.dimsePotli.MainActivity" android:theme="@style/Theme.DIMS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>